/*------------------------------------------------------------------------
This production looks out for the '-' and the '+' operators.
  When either of the operators are used, the Add/Sub instruction as 
  added to the .asm file.
------------------------------------------------------------------------*/

AddOp<out Instruction inst>
=                               (.  inst = new Instruction("", "Add"); .)
  ( '+'
  | '-'                         (.  inst = new Instruction("", "Sub"); .)
  ).

/*------------------------------------------------------------------------
This production deals with boolean expressions, but at a lower level,
  when it calls the SimExpr production, other expressions can be compiled.
  This production can also parse an expressions such as 
  "var x < var y ? var x+1 : var y-1;"
------------------------------------------------------------------------*/

Expr<out TastierType type>      (.  TastierType type1, type2, type3; Instruction inst; .)
= SimExpr<out type>
  [ RelOp<out inst>
    SimExpr<out type1>          (.
                                    if (type != type1) {
                                      SemErr("incompatible types");
                                    }
                                    else {
                                      program.Add(inst);
                                      type = TastierType.Boolean;
                                    }
                                .)
  ]
  [                             (.
                                   if(type != TastierType.Boolean){
                                      SemErr("Condition does not evaluate to boolean");
                                   }
                                    openLabels.Push(generateLabel());
                                    program.Add(new Instruction("", "FJmp " + openLabels.Peek()));
                                 .)
      '?'Expr<out type2>         (.
                                    Instruction startOfElse = new Instruction(openLabels.Pop(), "Nop");
                                    openLabels.Push(generateLabel());
                                    program.Add(new Instruction("", "Jmp " + openLabels.Peek()));
                                    program.Add(startOfElse);
                                 .)
      ':'Expr<out type3>         (.
                                   program.Add(new Instruction(openLabels.Pop(), "Nop"));
                                   if(type2!=type3){
                                      SemErr("In condition choice: types are incompatible");
                                   }else{
                                      type = type2;
                                   }
                                 .)
   ].

